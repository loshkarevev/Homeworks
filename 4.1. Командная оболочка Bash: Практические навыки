c: a+b, т.к. к a и b обращение идет не как к переменным
d: 1+2, т.к. к a и b обращение идет как к переменным
e: 3, т.к. все определено как числовое выражение

2
while ((1==1))
do
curl https://localhost:4757
if (($? != 0))
then
date >> curl.log
else 
break
fi
done

3
a=5
while (($a > 0))
do
	array_site=(192.168.0.1 173.194.222.113 87.250.250.242)
	for i in ${array_site[@]}
		do
		curl $i
		date >> curl.log
	done
let “a -= 1”
done

4
while ((1==1))
do
	array_site=(192.168.0.1 173.194.222.113 87.250.250.242)
	for i in ${array_site[@]}
		do
		curl $i
		if (($? == 0))
		then
		date >> curl.log
		else
		exit
		fi
done
